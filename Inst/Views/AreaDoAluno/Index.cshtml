@model InstModels 

@{
    ViewData["Title"] = "Area do Aluno";
}

<form asp-controller="AreaDoAluno" asp-action="Login" method="post">
    <div class=" border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Login</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="password"></label>
            <input asp-for="password" class="form-control" />
        </div>

        @* <a asp-controller="AreaDoAluno" asp-action="Login" class="btn btn-primary"> Login</a>*@
        <button id="Login" type="submit" class="btn btn-primary" style="width:150px">Login2</button>
    </div>
    <p class="small text-center text-gray-soft">
        Não tem uma conta? <a class="btn btn-link" role="button" asp-controller="AreaDoAluno"
                              asp-action="Registo"> Registe-se </a>

    <hr />

</form>


